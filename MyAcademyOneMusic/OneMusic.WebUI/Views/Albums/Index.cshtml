@model List<OneMusic.EntityLayer.Entities.Album>
@{
    ViewData["Title"] = "Albümler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcumb-area bg-img bg-overlay"
    style="background-image: url('/one-music-gh-pages/img/bg-img/breadcumb3.jpg');">
    <div class="bradcumbContent">
        <p>En Yeniler</p>
        <h2>Albümler</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Albums Area Start ##### -->
<section class="albums-area section-padding-100">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <!-- Single Album Area -->
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="single-album-area wow fadeInUp" data-wow-delay="100ms">
                        <div class="album-thumb">
                            <img src="@item.CoverImage" alt="@item.AlbumName"
                                style="height: 250px; object-fit: cover; width: 100%;">

                        </div>
                        <div class="album-info">
                            <a href="#">
                                <h5>@item.AlbumName</h5>
                            </a>
                            <p>@(item.AppUser != null ? item.AppUser.Name + " " + item.AppUser.Surname : "Sanatçı")</p>
                            <div class="album-price">
                                <p>@item.Price.ToString("N2") ₺</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- ##### Albums Area End ##### -->
