@{
    Layout = null;
}

<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OneMusic Artist</title>
    <link rel="shortcut icon" type="image/png" href="~/one-music-gh-pages/img/core-img/favicon.ico" />
    <link rel="stylesheet" href="~/Templates/Modernize-1.0.0/src/assets/css/styles.min.css" />
    <style>
        /* OneMusic Theme Override */
        body {
            font-family: 'Poppins', sans-serif;
        }

        .sidebar-nav ul .sidebar-item.selected>.sidebar-link,
        .sidebar-nav ul .sidebar-item.selected>.sidebar-link.active,
        .sidebar-nav ul .sidebar-item>.sidebar-link.active {
            background-color: #000000;
            /* Black */
            color: #ffffff;
        }

        .btn-primary {
            background-color: #000000;
            border-color: #000000;
        }

        .btn-primary:hover {
            background-color: #333333;
            border-color: #333333;
        }

        .app-header {
            border-bottom: 1px solid #e1e1e1;
        }

        .text-primary {
            color: #000000 !important;
        }

        .bg-primary {
            background-color: #000000 !important;
        }
    </style>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="./index.html" class="text-nowrap logo-img">
                        <img src="~/one-music-gh-pages/img/core-img/logo.png" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Artist/Dashboard/Index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-dashboard"></i>
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Artist/MyAlbum/index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-album"></i>
                                </span>
                                <span class="hide-menu">Albümlerim</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Artist/AlbumStatus/Index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-clipboard-text"></i>
                                </span>
                                <span class="hide-menu">Başvurularım</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Artist/MySong/index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-music"></i>
                                </span>
                                <span class="hide-menu">Şarkılarım</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Artist/Profile/Index" aria-expanded="false">
                                <span>
                                    <i class="ti ti-user"></i>
                                </span>
                                <span class="hide-menu">Profilim</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Login/LogOut" aria-expanded="false">
                                <span>
                                    <i class="ti ti-lock"></i>
                                </span>
                                <span class="hide-menu">Çıkış Yap</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">

                    @await Component.InvokeAsync("ArtistNavbarComponentPartial")

                </nav>
            </header>
            <!--  Header End -->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Templates/Modernize-1.0.0/src/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Templates/Modernize-1.0.0/src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Modernize-1.0.0/src/assets/js/sidebarmenu.js"></script>
    <script src="~/Templates/Modernize-1.0.0/src/assets/js/app.min.js"></script>
    <script src="~/Templates/Modernize-1.0.0/src/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    <script>
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 3500,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
            }
        });
    </script>

    @if (TempData["Result"] != null)

    {
        <script>
            Toast.fire({
                icon: "@TempData["icon"]",
                title: "@TempData["Result"]"
            });
        </script>
    }

</body>

</html>