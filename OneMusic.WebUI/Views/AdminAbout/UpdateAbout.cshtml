@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>About Guncelleme Sayfasi</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId" />

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Baslik</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Aciklama</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="4"> </textarea>
    <br />

    <button class="btn btn-outline-primary"> Guncelle </button>




</form>