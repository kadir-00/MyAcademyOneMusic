
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkimizda</h1>
@{
    int count = 0;
}

<table class="table table-bordered table-hover">

    <tr> 
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Islemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr> 
            <th>@count</th>
            <td> <img src="@item.ImageUrl" style="height:75px;width:75px" />  </td>
            <td> @item.Title </td>
            <td> @item.Description </td>
            <td>
                @* //  asp-action ve asp-route-id yeni  HREF YERINE KULLANILIYOR *@
            <a class="btn btn-outline-danger" asp-action="DeleteAbout" asp-route-id="@item.AboutId" > SIL </a>    
            <a class="btn btn-outline-info" asp-action="UpdateAbout" asp-route-id="@item.AboutId" > GUNCELLE </a>    
             
            </td>
        </tr>
        
    }

</table>

<a class="btn btn-outline-primary" asp-action="CreatAbout" > Ekle </a>

